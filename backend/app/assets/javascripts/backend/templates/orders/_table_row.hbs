{{#with order}}
<tr {{bind-attr class="state"}}>
  <td class="align-center">
    {{prettyDate completedAt}}
  </td>
  <td class="align-center">
    {{#link-to 'order' id}}{{id}}{{/link-to}}
  </td>
  <td class="align-center">
    <span class="state {{unbound state}}">{{state}}</span>
  </td>
  <td class="align-center">
    <span {{bind-attr class="paymentState :state"}}>
      {{#if paymentState}}
        {{paymentState}}
      {{/if}}
    </span>
  </td>
  <td class="align-center">
    <span {{bind-attr class="shipmentState :state"}}>
      {{#if shipment_state}}
        {{shipment_state}}
      {{/if}}
    </span>
  </td>
  <td>{{email}}</td>
  <td class="align-center">{{displayTotal}}</td>
  <td class='actions align-center' data-hook="admin_orders_index_row_actions">
    {{#link-to "order.edit" this }}Edit{{/link-to}}
  </td>
</tr>
{{/with}}