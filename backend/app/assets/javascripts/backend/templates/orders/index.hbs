<table class="index responsive" id="listing_orders" data-hook>
  <colgroup>
     <col style="width: 13%;">
     <col style="width: 10%;">
     <col style="width: 10%;">
     <col style="width: 12%;">
     <col style="width: 12%;">
     <col style="width: 25%;">
     <col style="width: 10%;">
     <col style="width: 8%;">
  </colgroup>
  <thead>
    <tr data-hook="admin_orders_index_headers">
      <th>Spree.t(:completed_at)</th>
      <th>Spree.t(:number) %></th>
      <th>Spree.t(:state)</th>
      <th>Spree.t(:payment_state)</th>
      <th>Spree.t(:shipment_state)</th>
      <th>Spree.t(:email)</th>
      <th>Spree.t(:total)</th>
      <th data-hook="admin_orders_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    {{#each controller}}
      {{ render 'orders/table_row' this }}
    {{/each}}
  </tbody>
</table>
